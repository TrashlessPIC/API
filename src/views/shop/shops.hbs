    </td>
    <td>
      {{phone}}
    </td>
     <td>
      {{mail}}
    </td>
     <td>
      {{facebook}}
    </td>
     <td>
      {{website}}
    </td>
     <td>
      {{houres}}
    </td>
    <td>
      {{mail}}
    </td>
    <td>
      <a class="btn btn-outline-secondary btn-sm" href="/shops/update/{{id}}" role="button">
        Update
      </a>
